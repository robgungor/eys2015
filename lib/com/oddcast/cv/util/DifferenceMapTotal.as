/* *   simply returns the difference between successive frames  *  */package com.oddcast.cv.util//import com.oddcast.cv.util.DifferenceMap;{	import flash.display.BitmapData;	import flash.display.BlendMode;		final public class DifferenceMapTotal extends DifferenceMap	{				public function DifferenceMapTotal() { 			super();			reset()		}				public function findDifferenceTotal(thisFrame:BitmapData):BitmapData {			lastFindDifference= super.findDifference(thisFrame);			if (!totalFrame) {				reset();				totalFrame = new BitmapData(lastFindDifference.width, lastFindDifference.height, lastFindDifference.transparent, 0xff000000);			}			totalFrame.draw(lastFindDifference, null, null, BlendMode.ADD);			count++;			return totalFrame;		}		public function reset():void {			totalFrame = null;			count = 0;			//lastFindDifference = null;		}				private var lastFindDifference :BitmapData;  public function getLastFindDifference():BitmapData { return lastFindDifference;}		private var totalFrame:BitmapData;		private var count:int;  public function getCount():int { return count;}	}}